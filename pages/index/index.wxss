/**index.wxss**/
.calculator-container {
  padding: 10px 20px;
  font-family: PingFang SC, Verdana, Helvetica Neue, Microsoft Yahei, Hiragino Sans GB, Microsoft Sans Serif, WenQuanYi Micro Hei, sans-serif;
}
.section{
  display: flex;
}
.section.title-section{
  margin-bottom: 12rpx;
}
.section.text-section{
  font-size: 28rpx;
  color:#ccc;
}
.section1,.section2{
  flex: 1; 
  overflow: hidden;
}
.section3{
  width: 160rpx;
  min-width: 160rpx;
  text-align: center;
}
.section4{
  width: 80rpx;
  min-width: 80rpx;
}
.input-section input{
  margin-bottom: 6rpx;
  width:80%;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #ccc; 
}
input.warning{
  border-bottom-color: rgba(255,0,0,.3); 
}
.input-section button{
  padding: 0;
  height: 50rpx;
  width: 50rpx;
  line-height: 1.4;
  background-color: #fff;
  border-color:#ccc;
}
.btn-area{
  float: right;
  margin-top: 40rpx;
}
.btn-area button{
  margin-bottom: 8rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius:100rpx;
}
.btn-add{
  background-color: #fff;
  border:1rpx solid #1f86ed;
  color:#1f86ed;
}
.btn-calculate{
  background-color: #1f86ed;
  border:1rpx solid #1f86ed;
  color:#fff;
}

.divider{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height:2rpx;
  width: 100%;
  background-color: #ccc;
}
.input-total-section{
  justify-content: space-between;
}
.input-total-section .section2{
  flex:inherit;
  display: flex;
}
.input-total-section .section2 input{
  width: 120rpx;
}